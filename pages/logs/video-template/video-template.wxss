.idt-container{
    display: flex;
    flex-direction:column;
    width:750rpx;
    margin:20rpx auto;
    font-size:32rpx;
    background-color:white;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}
.user-time{
    width: 100%;
    display: flex;
    flex-direction: row;
    line-height: 40rpx;
    position:relative;
}
.user-avator{
    width: 40rpx;
    height:40rpx;
    margin-left: 30rpx;
    border-radius:40rpx;
}
.user-name{
    margin-left:20rpx;
    color:lightgrey;
    font-size: 32rpx;
}
.current-time{
    position:absolute;
    right:30rpx;
}
.content{
    margin:-15rpx 0 0 30rpx;
    width: 700rpx;
}
.comment{
    margin-top:20rpx;
    line-height:32rpx;
}
.comment text{
    color:lightgrey;
    font-weight:300; 
    margin-left:30rpx;
}
video{
    margin-left:30rpx;
    width: 685rpx;
    margin-top:20rpx;
}
.discribe{
    margin-left:30rpx;
    width: 685rpx;
}